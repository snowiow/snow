defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_starttls off

account arbeit
host smtp.strato.de
port 465
from m.patzwahl@demv.de
user m.patzwahl@demv.de
passwordeval  "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mailpw_arbeit.gpg"

account privat
host posteo.de
port 465
from marcel.patzwahl@posteo.de
user marcel.patzwahl@posteo.de
passwordeval  "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mailpw_privat.gpg"

account default : privat
